<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>de.muspellheim</groupId>
    <artifactId>falkoschumann-archetype-github</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>maven-archetype</packaging>

    <name>GitHub Archetype</name>
    <description>
        Archetype for a GitHub Maven project.
    </description>
    <url>https://github.com/falkoschumann/maven-${project.artifactId}</url>

    <licenses>
        <license>
            <name>The MIT License (MIT)</name>
            <url>LICENSE.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>falkoschumann</id>
            <name>Falko Schumann</name>
            <email>falko.schumann@muspellheim.de</email>
            <url>http://www.muspellheim.de</url>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/falkoschumann/maven-${project.artifactId}.git</connection>
        <developerConnection>scm:git:https://github.com/falkoschumann/maven-${project.artifactId}.git</developerConnection>
        <url>http://github.com/falkoschumann/maven-${project.artifactId}</url>
    </scm>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/falkoschumann/maven-${project.artifactId}/issues</url>
    </issueManagement>

    <ciManagement>
        <system>travis-ci</system>
        <url>https://travis-ci.org/falkoschumann/maven-${project.artifactId}</url>
    </ciManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>2.4</version>
            </extension>
        </extensions>
    </build>

    <profiles>
        <profile>
            <id>bintray</id>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>bintray-falkoschumann-maven</id>
                    <name>bintray</name>
                    <url>http://dl.bintray.com/falkoschumann/maven</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>bintray-falkoschumann-maven</id>
                    <name>bintray-plugins</name>
                    <url>http://dl.bintray.com/falkoschumann/maven</url>
                </pluginRepository>
            </pluginRepositories>
            <distributionManagement>
                <repository>
                    <id>bintray-falkoschumann-maven</id>
                    <name>falkoschumann-maven</name>
                    <url>https://api.bintray.com/maven/falkoschumann/maven/${project.artifactId}/;publish=1</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>

</project>
